<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/dark_grey"
    tools:context=".MediaFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/swipemusic"
        android:layout_width="45dp"
        android:layout_height="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/swipebtn"
        android:onClick="swipemusic"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/image" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="88dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/SongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Song name"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/downloadTrack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="-40dp"
        android:background="@drawable/save_music"
        android:backgroundTint="@color/white">

    </ImageButton>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-0:00"
            android:layout_marginLeft="225dp"
            android:textColor="@color/grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/rewindbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/fastrewind"
            android:onClick="rewindBtn" />

        <ImageButton
            android:id="@+id/playbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/play1"
            android:onClick="playButton" />

        <ImageButton
            android:id="@+id/forwardbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/fastforward"
            android:onClick="forwardBtn"/>
    </LinearLayout>

</LinearLayout>